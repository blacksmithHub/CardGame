<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="40dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/cardgamebg"
    tools:context="com.example.libor.cardgame.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:paddingTop="350dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLucky"
            style="@style/home_btn"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:onClick="LuckyNine"
            android:text="Lucky 9" />

        <Button
            android:id="@+id/btnAbout"
            style="@style/home_btn"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="187dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:onClick="about"
            android:text="about" />

        <Button
            android:id="@+id/btnExit"
            style="@style/home_btn"
            android:layout_width="186dp"
            android:layout_gravity="center"
            android:onClick="exit"
            android:layout_height="wrap_content"
            android:text="exit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="300dp"
        android:orientation="horizontal">

        <Button
            style="@style/home_btn"
            android:id="@+id/btnHLgame"
            android:layout_marginRight="5dp"
            android:layout_width="132dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:onClick="HLgame"
            android:text="play high and low" />

        <Button
            style="@style/home_btn"
            android:id="@+id/btnGuessGame"
            android:textSize="12dp"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:onClick="guessgame"
            android:text="play guess card" />
    </LinearLayout>

</RelativeLayout>
