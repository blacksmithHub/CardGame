<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context="com.example.libor.cardgame.Baccarat">
    <ImageView
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:id="@+id/deck"
        android:src="@drawable/backcard"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:clickable="true" />
    <ImageView
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:id="@+id/cardMach3"
        android:src="@drawable/backcard"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:clickable="true"  />
    <ImageView
        android:id="@+id/cardMach1"
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/backcard"/>
    <ImageView
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:id="@+id/cardMach2"
        android:src="@drawable/backcard"/>
    <ImageView
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:id="@+id/cardUser3"
        android:src="@drawable/backcard"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:clickable="true" />
    <ImageView
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:id="@+id/cardUser1"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/backcard" />
    <ImageView
        android:layout_width="78dp"
        android:layout_height="118dp"
        android:id="@+id/cardUser2"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/backcard" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="180dp"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:weightSum="1">
            <ImageView
                android:layout_width="110dp"
                android:layout_marginTop="40dp"
                android:layout_height="235dp"
                android:paddingTop="40dp"
                android:layout_marginLeft="189dp"
                android:id="@+id/frame"
                android:src="@drawable/frame" />
        </LinearLayout>
    <TextView
        android:id="@+id/addtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:paddingLeft="217dp"
        android:paddingTop="306dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnRestart"
            style="@style/image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/restart" />
        <TextView
            android:id="@+id/comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="240dp"
            android:paddingTop="100dp"
            android:text=" :Enemy's points"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/Background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="430dp"
            android:scaleType="matrix"
            app:srcCompat="@drawable/green" />
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:paddingLeft="20dp"
            android:paddingTop="410dp"
            android:text="Your points: "
            android:textColor="#ffffff"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="230dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/first" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="485dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/end"
                android:layout_width="wrap_content"
                style="@style/home_btn"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="End Game" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="440dp">
            <Button
                android:id="@+id/btnPLay"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                style="@style/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="play" />
        </LinearLayout>
    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/giphy"
        android:visibility="gone"
        />
</RelativeLayout>

